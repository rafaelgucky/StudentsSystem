@using SellersManager.Models;
@model SellersManager.Models.Day
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}

<h1>@Model.DateTime.DayOfWeek</h1>
<main class="container">
    <div class="task">
        @* Avaliations *@
        @foreach (Lesson lesson in Model.Lessons)
        {
            @foreach (SellersManager.Models.Task task in lesson.Tasks)
            {
                if (task is Avaliation)
                {
                    <p>@task.Description - @lesson.Name</p>
                }
            }
        }
    </div>
    <div class="task">
        @* Homeworks *@
        @foreach (Lesson lesson in Model.Lessons)
        {
            @foreach (SellersManager.Models.Task task in lesson.Tasks)
            {
                if (task is HomeWork)
                {
                    <p>@task.Description - @lesson.Name</p>
                }
            }
        }
    </div>
</main>