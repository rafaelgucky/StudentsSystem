@model SellersManager.Models.ViewModels.StudentViewModel;

<main class="container">
	<section class="form">
		<form asp-controller="Home" asp-action="Register">
			<div class="field">
				<label asp-for="Name"></label>
				<input type="text" asp-for="Name" placeholder="Name"/>
			</div>
			<div class="field">
				<label asp-for="Password"></label>
				<input type="password" asp-for="Password" placeholder="Password"/>
			</div>
		
			<input type="submit" value="Register" id="submit"/>
		
		</form>
	</section>
</main>